    <script>
        // Konfigurasi waktu asesmen (WIB = UTC+7)
        const ASSESSMENT_CONFIG = {
            startDate: new Date('2025-12-05T08:00:00+07:00'),
            endDate: new Date('2025-12-05T09:00:00+07:00')
        };

        function updateTime() {
            const now = new Date();
            const wibTime = new Date(now.getTime() + (7 * 60 * 60 * 1000)); // Convert to WIB
            
            document.getElementById('current-time').textContent = 
                wibTime.toLocaleString('id-ID', {
                    timeZone: 'Asia/Jakarta',
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                });
        }

        function checkAssessmentStatus() {
            const now = new Date();
            const btnAtph = document.getElementById('btn-atph');
            const btnDpb = document.getElementById('btn-dpb');
            const statusAtph = document.getElementById('status-atph');
            const statusDpb = document.getElementById('status-dpb');
            const countdown = document.getElementById('countdown');

            if (now >= ASSESSMENT_CONFIG.startDate && now <= ASSESSMENT_CONFIG.endDate) {
                // Asesmen sedang berlangsung
                btnAtph.classList.remove('btn-disabled');
                btnDpb.classList.remove('btn-disabled');
                btnAtph.classList.add('pulse-animation');
                btnDpb.classList.add('pulse-animation');
                
                statusAtph.textContent = 'üü¢ AKTIF - Klik untuk mengakses';
                statusDpb.textContent = 'üü¢ AKTIF - Klik untuk mengakses';
                
                const timeLeft = ASSESSMENT_CONFIG.endDate - now;
                const minutes = Math.floor(timeLeft / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
                
                countdown.innerHTML = `
                    <div class="text-green-400 font-bold">
                        ‚è∞ ASESMEN SEDANG BERLANGSUNG
                    </div>
                    <div class="text-sm mt-2">
                        Sisa waktu: ${minutes}m ${seconds}s
                    </div>
                `;
                
            } else if (now < ASSESSMENT_CONFIG.startDate) {
                // Belum dimulai
                btnAtph.classList.add('btn-disabled');
                btnDpb.classList.add('btn-disabled');
                btnAtph.classList.remove('pulse-animation');
                btnDpb.classList.remove('pulse-animation');
                
                statusAtph.textContent = '‚è≥ Menunggu jadwal aktif';
                statusDpb.textContent = '‚è≥ Menunggu jadwal aktif';
                
                const timeUntilStart = ASSESSMENT_CONFIG.startDate - now;
                const days = Math.floor(timeUntilStart / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeUntilStart % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeUntilStart % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeUntilStart % (1000 * 60)) / 1000);
                
                countdown.innerHTML = `
                    <div class="text-yellow-400 font-bold">
                        ‚è∞ ASESMEN BELUM DIMULAI
                    </div>
                    <div class="text-sm mt-2">
                        Dimulai dalam: ${days}h ${hours}j ${minutes}m ${seconds}s
                    </div>
                `;
                
            } else {
                // Sudah berakhir
                btnAtph.classList.add('btn-disabled');
                btnDpb.classList.add('btn-disabled');
                btnAtph.classList.remove('pulse-animation');
                btnDpb.classList.remove('pulse-animation');
                
                statusAtph.textContent = 'üî¥ Asesmen telah berakhir';
                statusDpb.textContent = 'üî¥ Asesmen telah berakhir';
                
                countdown.innerHTML = `
                    <div class="text-red-400 font-bold">
                        ‚è∞ ASESMEN TELAH BERAKHIR
                    </div>
                    <div class="text-sm mt-2">
                        Berakhir pada: 5 Desember 2025, 09:00 WIB
                    </div>
                `;
            }
        }

        function handleButtonClick(url, className) {
            const now = new Date();
            
            if (now >= ASSESSMENT_CONFIG.startDate && now <= ASSESSMENT_CONFIG.endDate) {
                // Buka link di tab baru jika asesmen aktif
                window.open(url, '_blank', 'noopener,noreferrer');
            } else {
                // Tampilkan pesan jika tidak aktif
                const message = now < ASSESSMENT_CONFIG.startDate ? 
                    'Asesmen belum dimulai. Silakan tunggu hingga 5 Desember 2025 pukul 08:00 WIB.' :
                    'Asesmen telah berakhir pada 5 Desember 2025 pukul 09:00 WIB.';
                
                // Buat notifikasi inline
                showNotification(message);
            }
        }

        function showNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 max-w-sm';
            notification.innerHTML = `
                <div class="flex items-center">
                    <span class="mr-2">‚ö†Ô∏è</span>
                    <span class="text-sm">${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 5000);
        }

        // Update setiap detik
        setInterval(() => {
            updateTime();
            checkAssessmentStatus();
        }, 1000);

        // Inisialisasi
        updateTime();
        checkAssessmentStatus();
    </script>
